<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="contact"
            type="com.android.callmemaybe.UI.data.Contact" />
    </data>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MyProfile_Activity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is my profile"/>

        <EditText
            android:id="@+id/my_funny_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{contact.funnyStatus}"
            />

        <Button
            android:id="@+id/save_all_changes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_all_changes"/>

    </LinearLayout>
</layout>
