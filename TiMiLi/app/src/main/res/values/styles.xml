<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Tabs theme -->
    <style name="tabsTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabBarStyle</item>
    </style>

    <style name="ActionBarTabStyle">
        <item name="android:background">@drawable/tab_bar_background</item>
    </style>

    <style name="ActionBarTabBarStyle">

    </style>

    <style name="ActionBarTabTextStyle">

    </style>

    <!-- contact list item textview -->
    <style name="itemTextViewStyle">
        <item name="android:padding">5dp</item>
        <item name="android:color">@color/primary</item>
    </style>

    <!-- contact list item button -->
    <style name="itemButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- contact TextView -->
    <style name="contactTextViewStyle">
        <item name="android:textAppearance">@android:style/TextAppearance_DeviceDefault_Medium</item>
        <item name="android:color">@color/primary</item>
    </style>

    <!-- contact Button -->
    <style name="contactButtonStyle">
    </style>

</resources>
