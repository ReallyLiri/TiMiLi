<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="CustomDigitsTheme" parent="android:Theme.Light">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:windowBackground">@color/primary_text</item>
        <item name="android:textColorLink">@color/divider</item>
        <item name="dgts__accentColor">@color/primary_dark</item>
    </style>

    <!-- Tabs theme -->
    <style name="tabsTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabBarStyle</item>
    </style>

    <style name="ActionBarTabStyle">
        <item name="android:background">@drawable/tab_bar_background</item>
    </style>

    <style name="ActionBarTabBarStyle">

    </style>

    <style name="ActionBarTabTextStyle">

    </style>

    <!-- contact list item textview -->
    <style name="itemTextViewStyle">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- contact list item button -->
    <style name="itemButtonStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- contact TextView -->
    <style name="contactTextView">
        <item name="android:color">@color/primary</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!--contact Button -->
    <style name="contactButton">
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
